#!/bin/bash
set -e -u

ROOT_DIR_PATH=$(cd $(dirname $0)/.. && pwd)
cd $ROOT_DIR_PATH

db=${DB:-"postgres"} # if not set, default to postgres

docker_image=cloudfoundry/cf-networking-$db
if [ $db = "none" ]; then
  docker_image=cloudfoundry/cf-networking-postgres
fi

docker run \
   --rm \
   -it \
   --privileged \
   -v $PWD:/cf-networking-helpers \
   -e DB=$db \
   -w /cf-networking-helpers \
   $docker_image \
   /bin/bash "$@"
